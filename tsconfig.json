{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": [
            "es2016",
            "dom"
        ],
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": [
            "node",
            "jest"
        ],
        "paths": {
            "@react-state/data-strategy": [
                "./projects/data-strategy/release"
            ],
            "@react-state/immer-data-strategy": [
                "./projects/immer-data-strategy/release"
            ],
            "@react-state/immutablejs-data-strategy": [
                "./projects/immutable-data-strategy/release"
            ],
            "@react-state/store": [
                "./projects/react-state/release"
            ]
        }
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "dist"
    ]
}